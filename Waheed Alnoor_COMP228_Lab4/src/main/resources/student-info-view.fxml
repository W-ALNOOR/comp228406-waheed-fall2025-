<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ToggleGroup?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="exercise1.StudentInfoController"
            style="-fx-background-color: #f2f2f2; -fx-padding: 20;">

    <!-- No top header now -->
    <top>
        <Pane/>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">

            <!-- Define 4 columns -->
            <columnConstraints>
                <ColumnConstraints prefWidth="140"/>   <!-- labels -->
                <ColumnConstraints prefWidth="240"/>   <!-- text fields -->
                <ColumnConstraints prefWidth="170"/>   <!-- activities -->
                <ColumnConstraints prefWidth="260"/>   <!-- program + courses -->
            </columnConstraints>

            <fx:define>
                <ToggleGroup fx:id="majorGroup"/>
            </fx:define>

            <!-- LEFT COLUMN (labels + fields) -->
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Province:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="provinceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="cityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Postal Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="postalField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Phone Number:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>


            <!-- MIDDLE COLUMN (Activities) -->
            <VBox spacing="12" GridPane.rowIndex="1" GridPane.columnIndex="2">
                <CheckBox fx:id="studentCouncilBox" text="Student Council"/>
                <CheckBox fx:id="volunteerBox" text="Volunteer Work"/>
            </VBox>


            <!-- RIGHT COLUMN (Program + Courses) -->
            <VBox spacing="15" GridPane.rowIndex="0" GridPane.columnIndex="3">

                <HBox spacing="10">
                    <RadioButton fx:id="csButton" text="Computer Science" toggleGroup="$majorGroup"/>
                    <RadioButton fx:id="busButton" text="Business" toggleGroup="$majorGroup"/>
                </HBox>

                <ComboBox fx:id="courseCombo"/>

                <ListView fx:id="courseList" prefHeight="150"/>
            </VBox>


            <!-- DISPLAY BUTTON (below email) -->
            <Button text="Display"
                    fx:id="displayButton"
                    onAction="#displayInfo"
                    GridPane.rowIndex="7"
                    GridPane.columnIndex="1"
                    GridPane.halignment="CENTER"/>

        </GridPane>
    </center>


    <!-- BOTTOM TEXTAREA -->
    <bottom>
        <TextArea fx:id="displayArea"
                  prefHeight="120"
                  editable="false"
                  style="-fx-background-color: white;"/>
    </bottom>

</BorderPane>
